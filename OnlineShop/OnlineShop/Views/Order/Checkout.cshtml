@model Order
<div class="d-flex flex-column align-items-center">
    <div class="container">
        <h1 class="jumbotron-heading">Форма замовлення</h1>
        <p class="lead text-muted">Будь ласка, заповнюйте уважно!</p>
    </div>
    <div class="bg-light">
        <div class="container">
            <div class="row mb-5 col-12">
                <form asp-action="Checkout" method="post" class="form-horizontal">
                    <div class="form-group">
                        <label asp-for="name"></label>
                        <div>
                            <input asp-for="name" class="form-control" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="surname"></label>
                        <div>
                            <input asp-for="surname" class="form-control" />
                            <span asp-validation-for="surname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="address"></label>
                        <div>
                            <input asp-for="address" class="form-control" />
                            <span asp-validation-for="address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="phone"></label>
                        <div>
                            <input asp-for="phone" class="form-control" />
                            <span asp-validation-for="phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="email"></label>
                        <div>
                            <input asp-for="email" class="form-control" />
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                    </div>
                    <input class="btn btn-primary" type="submit" value="Закінчити замовлення" />
                </form>
            </div>
        </div>
    </div>
</div>
