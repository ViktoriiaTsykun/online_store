@model CartViewModel
    <div class="container d-flex flex-column align-items-center">
        @if (!Model.cart.listItems.Any())
        {
            <div class="bg-light d-flex">
                <p class="project-cart-empty">Ваша корзина, на жаль, пуста! Оберіть якийсь товар.</p>
                <img src="~/img/cart/cart.png" />
            </div>
        }
        else
        {
            <div>
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Ваша корзина</span>
                    <span class="badge badge-primary badge-pill">@Model.cart.listItems.Count()</span>
                </h4>
                <ul class="list-group mb-3">
                    @foreach (var el in Model.cart.listItems)
                    {
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">@el.product.name</h6>
                                <small class="text-muted">@el.product.shortDescr</small>
                            </div>
                            <span class="text-muted project-cart-item-price">@el.product.price.ToString("c")</span>
                        </li>
                    }
                </ul>
            </div>
            <hr />
            <a class="btn btn-primary btn-lg" asp-controller="Order" asp-action="Checkout">Замовити</a>
        }
    </div>
